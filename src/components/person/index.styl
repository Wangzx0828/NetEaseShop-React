#Person
  width 100%
  height 100%
  background-color: #f2f5f4
  .Person-wrap
    margin-top 33px
    width 100%
    height 590px
    display flex
    flex-direction column
    justify-content space-between
    align-items center
    .Person-conent-logo
      width 150px
      height 52px
      margin 60px 0
    .Person-conent
      width 100%
      height 320px
      display flex
      flex-direction column
      align-items center
      .Person-conent-btn1
        width 333px
        height 43px
        font-size 14px
        text-align: center
        line-height 43px
        display flex
        justify-content center
        background-color: #b4282d
        color #fff
        border-radius 4px
        margin-bottom 15px
        .icon-shouji
          font-size 18px
          padding-right 4px
      .Person-conent-btn2
        width 333px
        height 43px
        font-size 14px
        text-align: center
        line-height 43px
        display flex
        justify-content center
        border 1px solid #b4282d
        border-radius 4px
        color #b4282d
        margin-bottom 15px
        box-sizing border-box
        .icon-youxiang
          font-size 20px
          padding-right 10px
      .Person-conent-sp1
        font-size 14px
        .icon-jiantouyou
          margin-left 6px
    .Person-pwdlogin
      height 500px
      display flex
      flex-direction column
      align-items center
      justify-content space-around
      .logintext
        font 600 24px/24px  '楷体'
      .logincaptach
        display flex
        flex-direction column
      .hint
        font-size 12px
        width 314px
        .redhint
          color #b4282d
          line-height 24px
      img
        position absolute
        right 18px
        width 150px
        height 50px
      input
        color white
        background-color #000
        border 2px solid #fff
        padding-left 10px
        font-size 14px
        width 300px
        height 47px
        border-radius 6px
      .pwdloginBtn
        width 300px
        height 46px
        background-color #b4282d
        border 0
        border-radius 4px
        font-size 16px
        color white
      .forwe
        font-size 16px
        color #999999
    .Person-footer
      margin-bottom 44px
      font-size 12px
      color #979797
      height 30px
      width 260px
      display flex
      align-items center
      justify-content space-between
      .iconfont
        font-size 12px
        margin-right 4px