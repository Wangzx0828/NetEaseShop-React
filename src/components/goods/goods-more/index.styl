.goods-more
  background-color #f4f4f4
  padding 0 15px 15px
  .goods-more-header
    position relative
    height 70px
    text-align: center
    background-color #f4f4f4
    &::before
      position absolute
      top 50%
      content ''
      display block
      width 132px
      height 1px
      background-color: #e8e8e8
    &::after
      position absolute
      top 50%
      right 0
      content ''
      display block
      width 132px
      height 1px
      background-color: #e8e8e8
    .goods-more-header-title
      font-size 14px
      line-height 70px
  .goods-more-cart
    width 100%
    height 250px
    background-color: #fff
    padding 12px
    margin-bottom 12px
    box-sizing border-box
    img
      width 321px
      height 180px
    span
      font-size 14px