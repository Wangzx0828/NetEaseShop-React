.home-limit
  background-color: #fff
  width 375px
  height 160px
  padding 15px 24px
  box-sizing border-box
  display flex
  align-items center
  justify-content space-between
  .home-limit-left
    height 90px
    width 120px
    display flex
    flex-direction column
    justify-content space-around
    .limit-name
      font-size 18px
      margin-left 4px
    .limit-time
      display flex
      justify-content space-around
      align-items center
      font-size 18px
      width 120px
      height 28px
    .limit-black
      margin-top 8px
      text-align center
      line-height 28px
      width 31px
      height 28px
      background-color #444444
      border-radius 4px
      font-size 20px
      color white
    .limit-next
      margin-top 12px
      font-size 12px

  .home-limit-right
    position relative
    width 160px
    height 160px
    img
      width 100%
      height 100%
    .orangeRound
      position absolute
      bottom  16px
      right 12px
      width 48px
      height 48px
      border-radius 50%
      background-color: #f59524
      display flex
      flex-direction column
      align-items center
      justify-content center
      span
        font-size 12px
        color white