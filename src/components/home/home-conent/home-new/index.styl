.newImg
  width 375px
  height 130px
  background-image url("./images/new.png")
  background-repeat no-repeat
  background-size: 375px 130px
  display flex
  flex-direction column
  align-items center
  justify-content center
  .newSpan
    font 400 20px/40px '微软雅黑'
    color #94a8bd
  .isColor
    color #c5b491
  .lookAll
    width 120px
    height 28px
    background-color: #d8e5f1
    display flex
    align-items center
    justify-content center
    span
      font-size 16px
      color #94a8bd
    .isAll
      color #c5b491
    img
      width 4px
      height 11px
      margin-left 4px
  .isBox
    background-color #f4e9cb
.isShow
  background-image url("./images/new2.png")